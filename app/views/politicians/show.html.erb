<body>
<div id="profile_picture_div">
	<%= image_tag "place_holder_profile_picture.png", id: "profile_picture" %>
</div>
<header><h1><%= "#{@politician.title}" + ". " + "#{@politician.name}" %> </h1></header>
<div class="quick_facts">
	<ul>
		<li><%= image_tag @politician.symbol, id: "party_icon" %> </li>
		<li class="quick_stats"><%= "#{@politician.party_finder}" + " from " + "#{@politician.state}" + "'s " + "#{@politician.district.to_i.ordinalize}" + " district"%></li>
		<li><%= image_tag "segmentor.png", class: "segmentor" %></li>
		<li class="quick_stats">years in office</li>
		<li><%= image_tag "segmentor.png", class: "segmentor" %></li>
		<li class="quick_stats">absenteeism</li>
		<li><%= image_tag "segmentor.png", class: "segmentor" %></li>
		<li><%= image_tag "facebook_icon.png", class: "social_media_icons" %></li>
		<li>
			<!-- this url doesnt work! -->
			<%= link_to image_tag "twitter_icon.png", class: "social_media_icons", url: "http:twitter.com#{@politician.twitter_id}" %>
		</li>
		<li><%= image_tag "phone_icon.png", class: "social_media_icons" %></li>
	</ul>
</div>

<div class="general_information">

	<table>
		<tr>
			<th>Attribute</th>
			<th>Value</th>
		</tr>

		<tr>
			<td> <%= "Contact URL:" %>  </td>
			<td> <%= link_to "#{@politician.contact_form}", "#{@politician.contact_form}" %>  </td>	
		</tr>

		<tr>
			<td> <%= "Twitter:" %>  </td>
			<td> <%= link_to "#{@politician.twitter_id}", "http://www.twitter.com/#{@politician.twitter_id}" %>  </td>	
		</tr>

		<tr>
			<td> <%= "In office?:" %>  </td>
			<td> <%= "#{@politician.in_office}" %>  </td>	
		</tr>
		
	</table>

</div>

