		</tr>
	
		<% @ideologies.each do |issue, votes_hash| %>
				<% votes_hash.each_with_index do |(bill_id, vote), index| %>
					<tr>
						<% if index == 0 %>

							<td rowspan=<%= votes_hash.size %> class="<%= cycle("odd", "even") %>">

